{% set classes = ['card', 'card-topic'] %}

<div class="card-container">
  <article class="{{ classes|join(' ') }}">
    {% if is_external %}
      <div class="card__external" aria-hidden="true">
        <svg viewbox="0 0 35 35">
          <polygon class="card__external-icon" points="0 0 16.39 16.39 23.46 9.31 18.13 9.29 18.15 6.46 28.51 6.48 28.46 16.16 25.63 16.18 25.67 11.34 18.51 18.51 35 35 35 0 0 0" />
        </svg>
      </div>
    {% endif %}

    <div class="card__body">
      <h3 class="card__title"><a href="{{ link }}" class="card__link stretched-link">{{- title -}}</a></h3>

      {% if source %}
        <div class="card__source">{{- source -}}</div>
      {% endif %}

      {% if show_summary %}
        <div class="card__summary">
          {% block summary %}{% endblock %}
        </div>
      {% endif %}

      <div class="card__footer">
        {% if type or date %}
          {% if type %}
            <span class="card__type">{{- type -}}</span>
          {% endif %}

          {% if type and date %}
            {{ 'â€“' }}
          {% endif %}

          {% if show_date and date %}
            <date class="card__date">{{- date -}}</date>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </article>
</div>
