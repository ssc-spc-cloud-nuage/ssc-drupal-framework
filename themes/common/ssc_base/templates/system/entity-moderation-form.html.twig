{{ attach_library('ssc_base/entity_moderation_form') }}

<div class="panel panel-default entity-moderation">
  <header class="panel-heading">
    <h2 class="panel-title">{{ form.current }}</h2>
  </header>
  <div class="panel-body">
    <div class="entity-moderation__wrapper">
      <div class="entity-moderation__new-state">{{ form.new_state }}</div>
      <div class="entity-moderation__revision-log">{{ form.revision_log }}</div>
      <div class="entity-moderation__submit">{{ form.submit }}</div>
    </div>

    <div>{{ form|without('current', 'new_state', 'revision_log', 'submit', 'markup') }}</div>

    {% if form.markup %}
      <div class="entity-moderation__messages alert alert-danger">
        {{ form.markup }}
      </div>
    {% endif %}
  </div>
</div>
